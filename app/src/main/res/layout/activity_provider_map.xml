<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.aounikApp.providerMap"
tools:layout="@android:layout/simple_spinner_dropdown_item">

<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".MapsWithMarker"
    tools:layout="@android:layout/simple_spinner_dropdown_item" />


<Button
    android:id="@+id/go"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/iam"
    android:layout_marginTop="650dp"
    />

    <TextView
        android:id="@+id/expected_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Expected distance is:" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:text="TextView" />

    <TextView
        android:id="@+id/expected_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Expected Time is:" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:text="TextView" />

    <TextView
        android:id="@+id/expected_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Total price:" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:text="TextView" />


</FrameLayout>
